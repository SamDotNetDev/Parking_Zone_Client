@model ParkingZoneApp.Models.ParkingSlot

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: rgba(211, 211, 211, 0.7);
        padding: 20px;
        border-radius: 10px;
        max-width: 600px; /* Adjust as needed */
        margin: auto;
        margin-top: 105px;
        text-align: center;
    }

        .form-container dl {
            text-align: left; /* Align text to the left within dl elements */
        }
</style>

<br />
<h3 style="color: white; text-align: center">Are you sure you want to delete this?</h3>
<div class="form-container">
    <h4>Delete Parking Slot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            <label>
                @Html.DisplayNameFor(model => model.Number)
            </label>
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-12">
            <label>
                @Html.DisplayNameFor(model => model.IsAvailableForBooking)
            </label>
        </dt>
        <dd class="col-sm-12">
            @if (Model.IsAvailableForBooking)
                @Html.DisplayName("Yes")

            else
                @Html.DisplayName("No")
        </dd>
        <dt class="col-sm-12">
            <label>
                @Html.DisplayNameFor(model => model.Category)
            </label>
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Category)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (Model.IsInUse)
        {
            <a asp-action="Index" asp-route-ParkingZoneId="@Model.ParkingZoneId" class="btn btn-dark">Back to List</a>
            <b><label class="text-danger">Slot is in use cannot be deleted</label></b>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-route-ParkingZoneId="@Model.ParkingZoneId" class="btn btn-dark">Back to List</a>
        }
    </form>
</div>