@model ParkingZoneApp.ViewModels.ParkingSlotVMs.CreateVM
@using ParkingZoneApp.Enums
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .checkbox {
        transform: scale(1.5); 
    }
    .control-label {
        font-size: 18px;
    }
    .form-container {
        background-color: rgba(211, 211, 211, 0.7);
        padding: 30px;
        border-radius: 10px;
        margin-top: 105px;
    }

    .form-content {
        width: 100%;
    }
</style>

<br />
<div class="row justify-content-center">
    <div class="col-md-4 form-container">
        <h4 style="text-align: center">Create Parking Slot</h4>
        <hr />
        <form asp-action="Create">
            <input type="hidden" value="@Model.ParkingZoneId" asp-for="ParkingZoneId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<SlotCategoryEnum>()"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="checkbox" id="IsAvailableForBooking" asp-for="IsAvailableForBooking" class="checkbox">
                <label for="IsAvailableForBooking" class="control-label">Is Available For Booking</label>
                <span asp-validation-for="IsAvailableForBooking" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-ParkingZoneId="@Model.ParkingZoneId" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}