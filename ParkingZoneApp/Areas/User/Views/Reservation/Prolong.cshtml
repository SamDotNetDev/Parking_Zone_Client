@model ProlongVM
@using ParkingZoneApp.ViewModels.ReservationVMs
@{
    ViewData["Title"] = "Prolong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: rgba(211, 211, 211, 0.7);
        padding: 12px 15px;
        border-radius: 20px;
        margin-top: 85px;
    }

    .form-content {
        width: 100%;
    }
</style>

<h1 style="color: white; text-align: center">Prolong Reservation</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4 form-container">
        <form asp-action="Prolong">
            <input type="hidden" value="@Model.ReservationId" asp-for="ReservationId" />
            <input type="hidden" value="@Model.EndTime" asp-for="EndTime" />
            <input type="hidden" value="@Model.ParkingSlotNumber" asp-for="ParkingSlotNumber" />
            <input type="hidden" value="@Model.ParkingZoneAddress" asp-for="ParkingZoneAddress" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row">
                <dt class="col-sm-12">
                    <label asp-for="ParkingSlotNumber" class="control-label"></label>
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.ParkingSlotNumber)
                </dd>
                <dt class="col-sm-12">
                    <label asp-for="ParkingZoneAddress" class="control-label"></label>
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.ParkingZoneAddress)
                </dd>
                <dt class="col-sm-12">
                    <label asp-for="EndTime" class="control-label"></label>
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.EndTime)
                </dd>
            </dl>
            <br />
            <div class="form-group">
                <label asp-for="AddHours" class="control-label"></label>
                <input asp-for="AddHours" class="form-control" />
                <span asp-validation-for="AddHours" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Prolong" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
        {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}